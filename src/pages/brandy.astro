---
import Layout from "../layouts/Layout.astro";
import { Hero } from "@modules/Hero";
import {
  HeroSlider3,
  InfiniteImg1,
  InfiniteImg2,
  HeroSlider6,
  BrandyBanner,
} from "@static/images";
import { ServiceCards } from "@modules/ServiceCards";
import Footer from "../components/organisms/Footer.astro";

import { data } from "../utils/dummyData.js";
import { colors } from "../design-system/colors.js";
import Text from "../components/atoms/Text.astro";
import Button from "../components/atoms/Button.astro";
import FeaturedProducts from "@components/organisms/FeaturedProducts.astro";
import WAButton from "@components/banners/ButtonWhatsapp.astro";
import CategoryProducts from "@components/organisms/CategoryProducts.astro";
---

<Layout
  title="Cybernetic | Homepage"
  description="YOUR META DESCRIPTION FOR SEO"
>
  <main class="page-content">
    <Hero
      heroType="ParallaxImage"
      client:visible
      data={{
        image: BrandyBanner.src,
        content: {
          title: "BRANDY",
          paragraph:
            "Explora nuestra selección de brandy de las mejores marcas. Disfruta de ofertas exclusivas en productos premium para cada ocasión. ¡Aprovecha nuestros precios especiales y eleva tus momentos con el sabor único del brandy!",
        },
      }}
    />

    <ServiceCards
      description="LEGION DRINKERS"
      title="Nuestros Productos Al Alcance De Ti"
      client:visible
      cards={[
        {
          title: "Cyber - development",
          description: "lorem ipsum lorem ipsum lorem ipsum lorem ipsum .",
        },
      ]}
    />

    <div class="container">
      <div class="product-spotlight-area">
        <div class="product-spotlight-2">
          <div class="flex flex-col">
            <!-- <Text type="h3">Brandy Torres 15</Text>
            <a href="/products/brandy-torres-15"
              ><Button className="mt-7" type="secondary-inverted">
                VER PRODUCTO
              </Button></a
            > -->
          </div>
        </div>
      </div>
    </div>

    {
      data
        .filter(({ category }) => category === "brandies")
        .map(async (item) => {
          return (
            <Hero
              heroType="textImage"
              client:visible
              data={{
                image: {
                  src: `${item.image.desktop}`,
                  width: 590,
                  height: 300,
                  alt: "Hero Image",
                },
                title: `${item.name}`,
                paragraph:
                  "Explora los mejores brandies premium en nuestra web. Encuentra opciones excepcionales para disfrutar en solitario o en combinados exclusivos. ¡Descubre nuestros productos ahora!",
                buttons: [
                  {
                    link: `/products/${item.slug}`, // Enlace dinámico
                    text: "Ver Producto", // Texto del botón
                    variant: "secondary", // Variación del botón, si es necesario
                  },
                ],
              }}
            />
          );
        })
    }

    <div class="premium-categories">
      <span>BRANDIES DESTACADOS</span>
    </div>

    <Hero
      client:load
      heroType="CarouselSlider"
      data={[
        {
          id: "1",
          image: "/assets/brandies/azteca-de-oro.webp",
          title: "AZTECA DE ORO 700 ml ",
          description: "",
          button: { text: "¡Cotizalo Ahora!", link: "/producto-1" },
        },
        {
          id: "2",
          image: "/assets/brandies/presidente-clasico.webp",
          title: "PRESIDENTE CLASICO 900 ml",
          description: "",
          button: { text: "¡Cotizalo Ahora!", link: "/producto-1" },
        },
        {
          id: "3",
          image: "/assets/brandies/brandy-torres-alta-luz-cristalino.webp",
          title: "TORRES ALTA LUZ CRISTALINO 700 ml",
          description: "",
          button: { text: "¡Cotizalo Ahora!", link: "/producto-1" },
        },
        {
          id: "4",
          image: "/assets/brandies/don-pedro-gran-reserva.webp",
          title: "Don Pedro Gran Reserva 400ml",
          description: "",
          button: { text: "¡Cotizalo Ahora!", link: "/producto-1" },
        },
      ]}
    />

    <!-- <Hero
      heroType="textImage"
      client:visible
      data={{
        image: {
          src: InfiniteImg1.src,
          width: 590,
          height: 300,
          alt: "Hero Image",
        },
        title: "Lets make you Infinite!",
        paragraph:
          "Become a part of the Infinite community and start sharing your thoughts, ideas, and experiences with like-minded people.",
      }}
    /> -->

    <FeaturedProducts />

    <!-- <CategoryProducts /> -->

    <Hero
      heroType="textImage"
      client:visible
      data={{
        switchPlaces: true,
        image: {
          src: "public/assets/branding/Codigo-Honor.jpg",
          width: 700,
          height: 500,
          alt: "Catalogo Legion Drinkers",
        },
        title: "¿Quieres Alguno En Especifico?",
        paragraph:
          "Descubre nuestro catálogo completo con productos seleccionados para cada ocasión. Desde lo clásico hasta lo único, ¡encuentra lo que estás buscando y más! ¡Haz clic en el botón y lleva tus elecciones al siguiente nivel!",
        buttons: [
          {
            link: "catalogo/catalogo-legion-drinkers.pdf", // Enlace dinámico
            text: "Descargar Catálogo Completo", // Texto del botón
            variant: "secondary", // Variación del botón, si es necesario
          },
        ],
      }}
    />
  </main>

  <WAButton url="https://wa.link/uen192" />

  <Footer />
</Layout>

<style>
  .product-spotlight-area {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .product-spotlight-2 {
    width: 100%;
    height: 300px;
    border-radius: 35px;
    background: url("assets/branding/brandy-banner.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    padding: 34px 124px;
    grid-column: 1 / 3;
    color: white;
  }

  .premium-categories {
    display: flex;
    align-items: center;
    text-align: center;
    max-width: 80%; /* Limita el ancho del contenedor */
    margin: 0 auto; /* Centra el contenedor */
    margin-top: 80px;
  }
  .premium-categories span {
    font-size: 26px; /* Tamaño del texto */
    font-weight: bold;
    color: #2c3137; /* Color del texto */
    position: relative;
    padding: 0 15px; /* Espaciado entre el texto y las líneas */
    letter-spacing: 5px; /* Espaciado entre cada letra */
  }
  .premium-categories:before,
  .premium-categories:after {
    content: "";
    flex: 1;
    height: 2px; /* Grosor de las líneas */
    background: #2c3137; /* Color de las líneas */
    margin: 0 20px; /* Ajusta el espaciado entre el texto y las líneas */
  }
</style>
