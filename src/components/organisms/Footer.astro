<style>
  :root {
    --night: #000; /* Background color */
    --dim-white: #aaa; /* Text color */
    --white: #fff;
  }

  .footer {
    background-color: var(--night);
    color: var(--white);
    padding: 40px 20px;
    text-align: center;
    font-family: Arial, sans-serif;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    margin-bottom: 40px;
  }

  .logo span {
    font-size: 20px;
    font-weight: bold;
    color: var(--dim-white);
    letter-spacing: 5px;
  }

  .nav-links {
    display: flex;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-links a {
    color: #f9dc22;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .nav-links a:hover {
    color: var(--dim-white);
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  .description {
    max-width: 600px;
    font-size: 14px;
    color: var(--dim-white);
    text-align: center;
  }

  .description p {
    color: #f9dc22;
    text-decoration: none;
    font-weight: bold;
  }

  .nav-links p {
    color: var(--dim-white);
    text-decoration: none;
    font-weight: normal;
  }

  .social {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .icons {
    display: flex;
    gap: 16px;
  }

  .icons a img {
    width: 24px;
    transition: transform 0.3s ease;
  }

  .icons a:hover img {
    transform: scale(1.1);
  }

  .credit {
    font-size: 12px;
    color: var(--dim-white);
  }

  .credit a {
    color: var(--white);
    text-decoration: none;
    font-weight: bold;
  }

  .credit a:hover {
    color: var(--dim-white);
  }
</style>
