---
// Props para personalizar el botón
const { url } = Astro.props;

interface Props {
  url: string; // Enlace al chat de WhatsApp
}
---

<style>
  .whatsapp-button {
    position: fixed;
    bottom: 30px;
    right: 20px; /* Reduce un poco el espacio en dispositivos pequeños */
    background-color: #25d366;
    color: white;
    border-radius: 50%;
    width: 75px;
    height: 75px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .whatsapp-button:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
  }

  .whatsapp-icon {
    width: 45px;
    height: 45px; /* Ajusta el tamaño del ícono en pantallas pequeñas */
  }

  /* Ajustes para dispositivos pequeños */
  @media screen and (max-width: 768px) {
    .whatsapp-button {
      width: 50px;
      height: 50px;
      bottom: 20px; /* Reduce el margen inferior */
      right: 15px; /* Reduce el margen derecho */
    }

    .whatsapp-icon {
      width: 25px;
      height: 25px;
    }
  }

  @media screen and (max-width: 480px) {
    .whatsapp-button {
      width: 60px;
      height: 60px;
      bottom: 15px;
      right: 10px;
    }

    .whatsapp-icon {
      width: 35px;
      height: 35px;
    }
  }
</style>

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="whatsapp-button"
  aria-label="Abrir WhatsApp"
>
